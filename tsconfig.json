{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "esnext",
    "module": "nodenext",
    "isolatedModules": true,
    // "allowJs": true,
    // "checkJs": true,
    "strict": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src", "types"],
  "exclude": [
    "node_modules", 
    "dist",
    "**/*.test.ts" 
  ]
}
